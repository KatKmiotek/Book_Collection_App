<fieldset class = "flex-container2">
  <legend></legend>
<form class="add-book" action="/create" method="post">
  <label for="user">User</label>
  <select class="" name="user_id">
    <% for user in @users %>
    <option value="<%= user.id %>"><%= user.name %></option>
    <% end %>
    </select>
  <label for="author">Author</label>
  <input type="text" name="author" value="" required>
  <label for="title">Title</label>
  <input type="text" name="title" value="" required>
  <label for="language">Language: </label>
  <select class="" name="language">
    <option value="">select</option>
    <option value="Polish">Polish</option>
    <option value="English">English</option>
    <option value="Other">Other</option>
  </select>
  <label for="location">Location</label>
  <select class="" name="location">
    <option value="">select</option>
    <option value="at home">at home</option>
    <option value="away">away</option>
  </select>
  <label for="status">Status</label>
  <select class="" name="status">
  <option value="">select</option>
  <option value="to read">to read</option>
  <option value="have read">have read</option>
  <option value="reading">reading</option>
  </select>
  <label for="comment">comment</label>
  <input type="text" name="comment" value="">
  <input class ="" type="submit" name="" value="Add Book">
</form>
</fieldset>
